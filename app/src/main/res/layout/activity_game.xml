<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/question_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/enunciado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_image"
        tools:text="Texto do enunciado: "/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alternativas"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/enunciado"
        />

    <Button
        android:id="@+id/proxima_questao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alternativas"
        android:text="@string/responder" />


</RelativeLayout>